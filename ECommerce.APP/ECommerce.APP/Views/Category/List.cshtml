@model ECommerce.APP.Models.CategoryModel.CategoryListVM

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                @Model.Title
            </h3>
        </div>
        <div class="card-body">
            @Model.Description
        </div>
        
    </div>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Category List</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th style="width: 40px">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.CategoryList)
                {
                    <tr>
                        <td>@(++serialNum)</td>
                        <td>@category.Name</td>
                        <td>
                            @category.Code
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="badge bg-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="badge bg-danger">Delete</a>

                        </td>
                    </tr>

                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </div>
</div>